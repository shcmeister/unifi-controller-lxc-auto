#!/bin/bash

# –¢–æ–∑–∏ —Å–∫—Ä–∏–ø—Ç —Å–µ –∏–∑–ø—ä–ª–Ω—è–≤–∞ –Ω–∞ Proxmox —Ö–æ—Å—Ç.
# –¢–æ–π –∞–≤—Ç–æ–º–∞—Ç–∏–∑–∏—Ä–∞ —Å—ä–∑–¥–∞–≤–∞–Ω–µ—Ç–æ –Ω–∞ LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –∏ –ø—ä–ª–Ω–∞—Ç–∞ –∏–Ω—Å—Ç–∞–ª–∞—Ü–∏—è –Ω–∞ UniFi Network Controller –≤—ä—Ç—Ä–µ –≤ –Ω–µ–≥–æ.

# --- –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è –Ω–∞ LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ ---
CTID=$(pvesh get /cluster/nextid) # ID –Ω–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ (–∞–≤—Ç–æ–º–∞—Ç–∏—á–Ω–æ —â–µ –±—ä–¥–µ —Å–ª–µ–¥–≤–∞—â–æ—Ç–æ –Ω–∞–ª–∏—á–Ω–æ ID)
HOSTNAME="unifi-$CTID"        # –ò–º–µ –Ω–∞ —Ö–æ—Å—Ç–∞ –Ω–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ (—â–µ –≤–∫–ª—é—á–≤–∞ ID –∑–∞ —É–Ω–∏–∫–∞–ª–Ω–æ—Å—Ç)
TEMPLATE="debian-12-standard_12.7-1_amd64.tar.zst" # –®–∞–±–ª–æ–Ω –Ω–∞ –û–°
MEMORY=2048                   # RAM –≤ MB (2GB –ø—Ä–µ–ø–æ—Ä—ä—á–∏—Ç–µ–ª–Ω–æ –∑–∞ UniFi)
DISK_SIZE=10                  # –†–∞–∑–º–µ—Ä –Ω–∞ –¥–∏—Å–∫–∞ –≤ GB (10GB –µ –¥–æ–±—Ä–æ –Ω–∞—á–∞–ª–æ)
CORES=2                       # –ë—Ä–æ–π CPU —è–¥—Ä–∞
MONGO_VERSION="7.0"           # –í–µ—Ä—Å–∏—è –Ω–∞ MongoDB, —Å—ä–≤–º–µ—Å—Ç–∏–º–∞ —Å UniFi

# --- –õ–æ–≥ —Ñ—É–Ω–∫—Ü–∏—è ---
log_message() {
    echo -e "\033[1;34m--- $(date +'%Y-%m-%d %H:%M:%S') --- $1\033[0m"
}

# --- –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞ root –ø—Ä–∏–≤–∏–ª–µ–≥–∏–∏ –Ω–∞ —Ö–æ—Å—Ç–∞ ---
if [[ $EUID -ne 0 ]]; then
    echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: –¢–æ–∑–∏ —Å–∫—Ä–∏–ø—Ç —Ç—Ä—è–±–≤–∞ –¥–∞ —Å–µ –∏–∑–ø—ä–ª–Ω—è–≤–∞ –∫–∞—Ç–æ root –ø–æ—Ç—Ä–µ–±–∏—Ç–µ–ª –Ω–∞ Proxmox —Ö–æ—Å—Ç–∞!\033[0m"
    exit 1
fi

# --- –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞ pct –∫–æ–º–∞–Ω–¥–∞ (—É–∫–∞–∑–≤–∞, —á–µ –µ Proxmox —Ö–æ—Å—Ç) ---
if ! command -v pct >/dev/null 2>&1; then
    echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: –ö–æ–º–∞–Ω–¥–∞—Ç–∞ 'pct' –Ω–µ –µ –Ω–∞–º–µ—Ä–µ–Ω–∞. –ú–æ–ª—è, –∏–∑–ø—ä–ª–Ω–µ—Ç–µ —Ç–æ–∑–∏ —Å–∫—Ä–∏–ø—Ç –Ω–∞ Proxmox —Ö–æ—Å—Ç.\033[0m"
    exit 1
fi

log_message "–°—Ç–∞—Ä—Ç–∏—Ä–∞–Ω–µ –Ω–∞ —Å–∫—Ä–∏–ø—Ç–∞ –∑–∞ –∞–≤—Ç–æ–º–∞—Ç–∏—á–Ω–∞ –∏–Ω—Å—Ç–∞–ª–∞—Ü–∏—è –Ω–∞ UniFi LXC."

# --- –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞ —Å—ä—â–µ—Å—Ç–≤—É–≤–∞—â CTID ---
if pct status $CTID &>/dev/null; then
    echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä —Å ID $CTID –≤–µ—á–µ —Å—ä—â–µ—Å—Ç–≤—É–≤–∞. –ú–æ–ª—è, –ø—Ä–æ–º–µ–Ω–µ—Ç–µ CTID –≤ —Å–∫—Ä–∏–ø—Ç–∞ –∏–ª–∏ –∏–∑—Ç—Ä–∏–π—Ç–µ —Å—ä—â–µ—Å—Ç–≤—É–≤–∞—â–∏—è –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä.\033[0m"
    exit 1
fi

# --- –ù–∞–º–∏—Ä–∞–Ω–µ –Ω–∞ —Å—Ç–æ—Ä–∏–¥–∂–∞ —Å –Ω–∞–π-–º–Ω–æ–≥–æ —Å–≤–æ–±–æ–¥–Ω–æ –º—è—Å—Ç–æ ---
log_message "–ù–∞–º–∏—Ä–∞–Ω–µ –Ω–∞ storage —Å –Ω–∞–π-–º–Ω–æ–≥–æ —Å–≤–æ–±–æ–¥–Ω–æ –º—è—Å—Ç–æ..."
# –ò–∑–∫–ª—é—á–≤–∞ —Å—Ç–æ—Ä–∏–¥–∂–∏ –æ—Ç —Ç–∏–ø iso, backup –∏ rootfs (–∫–æ–∏—Ç–æ –º–æ–∂–µ –¥–∞ —Å–∞ –≤—ä—Ç—Ä–µ—à–Ω–∏ –Ω–∞ —Ö–æ—Å—Ç–∞)
BEST_STORAGE=$(pvesm status --storage | awk 'NR>1 && $1 !~ /iso|backup/ && $6 ~ /^[0-9]+$/ {print $1, $6}' | sort -nrk2 | head -n1 | awk '{print $1}')
if [ -z "$BEST_STORAGE" ]; then
    echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: –ù–µ –µ –Ω–∞–º–µ—Ä–µ–Ω –Ω–∞–ª–∏—á–µ–Ω storage. –ú–æ–ª—è, –ø—Ä–æ–≤–µ—Ä–µ—Ç–µ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è—Ç–∞ –Ω–∞ Proxmox storage-–∞.\033[0m"
    exit 1
fi
log_message "–ò–∑–±—Ä–∞–Ω storage: \033[1;32m$BEST_STORAGE\033[0m"

# --- –ü—Ä–æ–≤–µ—Ä–∫–∞ –∏ —Å–≤–∞–ª—è–Ω–µ –Ω–∞ —à–∞–±–ª–æ–Ω–∞, –∞–∫–æ –µ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ ---
log_message "–ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞ –Ω–∞–ª–∏—á–∏–µ –Ω–∞ —à–∞–±–ª–æ–Ω $TEMPLATE..."
# –®–∞–±–ª–æ–Ω—ä—Ç —Ç—Ä—è–±–≤–∞ –¥–∞ –µ –≤ –ø–æ–¥–¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è 'vztmpl' –Ω–∞ —Å—Ç–æ—Ä–∏–¥–∂–∞
TEMPLATE_PATH="$BEST_STORAGE:vztmpl/$TEMPLATE"
if ! pveam list $BEST_STORAGE | grep -q "$TEMPLATE"; then
    log_message "–®–∞–±–ª–æ–Ω—ä—Ç $TEMPLATE –Ω–µ –µ –Ω–∞–º–µ—Ä–µ–Ω. –°–≤–∞–ª—è–Ω–µ..."
    pveam download $BEST_STORAGE $TEMPLATE
    if [ $? -ne 0 ]; then
        echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: –ù–µ—É—Å–ø–µ—à–Ω–æ —Å–≤–∞–ª—è–Ω–µ –Ω–∞ —à–∞–±–ª–æ–Ω–∞ $TEMPLATE. –ú–æ–ª—è, –ø—Ä–æ–≤–µ—Ä–µ—Ç–µ –≤—Ä—ä–∑–∫–∞—Ç–∞ —Å–∏ —Å –∏–Ω—Ç–µ—Ä–Ω–µ—Ç –∏–ª–∏ –∏–º–µ—Ç–æ –Ω–∞ —à–∞–±–ª–æ–Ω–∞.\033[0m"
        exit 1
    fi
    log_message "–®–∞–±–ª–æ–Ω—ä—Ç $TEMPLATE –µ —É—Å–ø–µ—à–Ω–æ —Å–≤–∞–ª–µ–Ω."
else
    log_message "–®–∞–±–ª–æ–Ω—ä—Ç $TEMPLATE –µ –Ω–∞–ª–∏—á–µ–Ω."
fi

# --- –ì–µ–Ω–µ—Ä–∏—Ä–∞–Ω–µ –Ω–∞ —Å–ª—É—á–∞–π–Ω–∞ root –ø–∞—Ä–æ–ª–∞ ---
ROOTPASS=$(openssl rand -base64 12)
log_message "–ì–µ–Ω–µ—Ä–∏—Ä–∞–Ω–∞ root –ø–∞—Ä–æ–ª–∞ –∑–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞: \033[1;33m$ROOTPASS\033[0m" # –û—Ç–ø–µ—á–∞—Ç–≤–∞ –ø–∞—Ä–æ–ª–∞—Ç–∞ –∑–∞ –∑–∞–ø–∏—Å

# --- –°—ä–∑–¥–∞–≤–∞–Ω–µ –Ω–∞ LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä ---
log_message "–°—ä–∑–¥–∞–≤–∞–Ω–µ –Ω–∞ LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä —Å ID $CTID –∏ –∏–º–µ $HOSTNAME..."
pct create $CTID "$TEMPLATE_PATH" \
    -storage $BEST_STORAGE \
    -hostname $HOSTNAME \
    -memory $MEMORY \
    -cores $CORES \
    -rootfs "$BEST_STORAGE:$DISK_SIZE" \
    -net0 name=eth0,bridge=vmbr0,ip=dhcp \
    -unprivileged 1 \
    -onboot 1 \
    -password "$ROOTPASS" \
    -features nesting=1

if [ $? -ne 0 ]; then
    echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: –ù–µ—É—Å–ø–µ—à–Ω–æ —Å—ä–∑–¥–∞–≤–∞–Ω–µ –Ω–∞ LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä $CTID. –ú–æ–ª—è, –ø—Ä–æ–≤–µ—Ä–µ—Ç–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏—Ç–µ.\033[0m"
    exit 1
fi
log_message "LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä $CTID –µ —É—Å–ø–µ—à–Ω–æ —Å—ä–∑–¥–∞–¥–µ–Ω."

# --- –°—Ç–∞—Ä—Ç–∏—Ä–∞–Ω–µ –Ω–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ ---
log_message "–°—Ç–∞—Ä—Ç–∏—Ä–∞–Ω–µ –Ω–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ $CTID..."
pct start $CTID
if [ $? -ne 0 ]; then
    echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: –ù–µ—É—Å–ø–µ—à–Ω–æ —Å—Ç–∞—Ä—Ç–∏—Ä–∞–Ω–µ –Ω–∞ LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä $CTID. –ú–æ–ª—è, –ø—Ä–æ–≤–µ—Ä–µ—Ç–µ –ª–æ–≥–æ–≤–µ—Ç–µ.\033[0m"
    exit 1
fi
log_message "–ö–æ–Ω—Ç–µ–π–Ω–µ—Ä $CTID –µ —Å—Ç–∞—Ä—Ç–∏—Ä–∞–Ω."

# --- –ò–∑—á–∞–∫–≤–∞–Ω–µ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ä—Ç –¥–∞ –ø–æ–ª—É—á–∏ IP –∞–¥—Ä–µ—Å ---
log_message "–ò–∑—á–∞–∫–≤–∞–Ω–µ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ä—Ç $CTID –¥–∞ –ø–æ–ª—É—á–∏ IP –∞–¥—Ä–µ—Å (–¥–æ 30 —Å–µ–∫—É–Ω–¥–∏)..."
sleep_count=0
CONTAINER_IP=""
# –ò–∑–ø–æ–ª–∑–≤–∞–º–µ 'for' —Ü–∏–∫—ä–ª –∑–∞ –ø–æ-—è—Å–µ–Ω –∫–æ–Ω—Ç—Ä–æ–ª –Ω–∞ –≤—Ä–µ–º–µ—Ç–æ –∑–∞ –∏–∑—á–∞–∫–≤–∞–Ω–µ
for i in {1..6}; do # 6 –∏—Ç–µ—Ä–∞—Ü–∏–∏ * 5 —Å–µ–∫—É–Ω–¥–∏ = 30 —Å–µ–∫—É–Ω–¥–∏
    sleep 5
    CONTAINER_IP=$(pct exec $CTID -- hostname -I | awk '{print $1}')
    if [ -n "$CONTAINER_IP" ]; then
        break # –ò–∑–ª–∏–∑–∞ –æ—Ç —Ü–∏–∫—ä–ª–∞, –∞–∫–æ IP –µ –Ω–∞–º–µ—Ä–µ–Ω–æ
    fi
done


if [ -z "$CONTAINER_IP" ]; then
    echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä—ä—Ç $CTID –Ω–µ —É—Å–ø—è –¥–∞ –ø–æ–ª—É—á–∏ IP –∞–¥—Ä–µ—Å –≤ —Ä–∞–º–∫–∏—Ç–µ –Ω–∞ 30 —Å–µ–∫—É–Ω–¥–∏. –ü—Ä–æ–≤–µ—Ä–µ—Ç–µ –º—Ä–µ–∂–æ–≤–∞—Ç–∞ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è –∏–ª–∏ —É—Å–ª—É–≥–∞—Ç–∞ DHCP.\033[0m"
    exit 1
fi
log_message "–ö–æ–Ω—Ç–µ–π–Ω–µ—Ä—ä—Ç $CTID –ø–æ–ª—É—á–∏ IP –∞–¥—Ä–µ—Å: \033[1;36m$CONTAINER_IP\033[0m"

# --- –ò–Ω—Å—Ç–∞–ª–∏—Ä–∞–Ω–µ –Ω–∞ UniFi Controller –≤—ä—Ç—Ä–µ –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ ---
log_message "–°—Ç–∞—Ä—Ç–∏—Ä–∞–Ω–µ –Ω–∞ –∏–Ω—Å—Ç–∞–ª–∞—Ü–∏—è –Ω–∞ UniFi Network Controller –≤—ä—Ç—Ä–µ –≤ LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ $CTID..."

# –ò–∑–ø—ä–ª–Ω—è–≤–∞–Ω–µ –Ω–∞ —Å–∫—Ä–∏–ø—Ç–∞ –∑–∞ –∏–Ω—Å—Ç–∞–ª–∞—Ü–∏—è –Ω–∞ UniFi Controller –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
# –ò–∑–ø–æ–ª–∑–≤–∞ —Å–µ heredoc –∑–∞ –ø—Ä–µ–¥–∞–≤–∞–Ω–µ –Ω–∞ –º–Ω–æ–≥–æ—Ä–µ–¥–æ–≤–∏ –∫–æ–º–∞–Ω–¥–∏ –∫—ä–º pct exec
pct exec $CTID -- bash -c "
    # –í—ä—Ç—Ä–µ—à–Ω–∞ –ª–æ–≥ —Ñ—É–Ω–∫—Ü–∏—è –∑–∞ –ø–æ-—è—Å–µ–Ω –∏–∑—Ö–æ–¥ –æ—Ç –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
    log_message_inner() {
        echo \"--- \$(date +'%Y-%m-%d %H:%M:%S') (–í—ä—Ç—Ä–µ –≤ LXC) --- \$1\"
    }

    # set -e –≥–∞—Ä–∞–Ω—Ç–∏—Ä–∞, —á–µ —Å–∫—Ä–∏–ø—Ç—ä—Ç —â–µ —Å–ø—Ä–µ, –∞–∫–æ –Ω—è–∫–æ—è –æ—Ç –∫–æ–º–∞–Ω–¥–∏—Ç–µ —Å–µ –ø—Ä–æ–≤–∞–ª–∏
    set -e

    log_message_inner \"–ò–Ω—Å—Ç–∞–ª–∏—Ä–∞–Ω–µ –Ω–∞ –æ—Å–Ω–æ–≤–Ω–∏ –ø—Ä–µ–¥–≤–∞—Ä–∏—Ç–µ–ª–Ω–∏ –∏–∑–∏—Å–∫–≤–∞–Ω–∏—è...\"
    apt-get update
    apt-get install -y curl gnupg apt-transport-https wget lsb-release ca-certificates

    log_message_inner \"–î–æ–±–∞–≤—è–Ω–µ –Ω–∞ UniFi —Ö—Ä–∞–Ω–∏–ª–∏—â–µ –∏ GPG –∫–ª—é—á...\"
    wget -qO - https://dl.ui.com/unifi/unifi-repo.gpg | apt-key add -
    echo 'deb https://dl.ui.com/unifi/debian stable ubiquiti' | tee /etc/apt/sources.list.d/100-ubnt-unifi.list >/dev/null

    log_message_inner \"–î–æ–±–∞–≤—è–Ω–µ –Ω–∞ MongoDB —Ö—Ä–∞–Ω–∏–ª–∏—â–µ –∏ GPG –∫–ª—é—á –∑–∞ –≤–µ—Ä—Å–∏—è $MONGO_VERSION...\"
    DISTRO_ID_INNER=\$(lsb_release -is | tr '[:upper:]' '[:lower:]')
    DISTRO_CODENAME_INNER=\$(lsb_release -cs)
    MONGO_REPO_TYPE_INNER=\"debian\"
    if [ \"\$DISTRO_ID_INNER\" == \"ubuntu\" ]; then
        MONGO_REPO_TYPE_INNER=\"ubuntu\"
    fi
    wget -qO - https://www.mongodb.org/static/pgp/server-$MONGO_VERSION.asc | apt-key add -
    echo \"deb http://repo.mongodb.org/apt/\$MONGO_REPO_TYPE_INNER \$DISTRO_CODENAME_INNER/mongodb-org/$MONGO_VERSION main\" | tee /etc/apt/sources.list.d/mongodb-org-$MONGO_VERSION.list >/dev/null

    log_message_inner \"–ò–∑—á–∏—Å—Ç–≤–∞–Ω–µ –Ω–∞ apt –∫–µ—à–∞ –∏ –∞–∫—Ç—É–∞–ª–∏–∑–∏—Ä–∞–Ω–µ –Ω–∞ —Å–ø–∏—Å—ä—Ü–∏—Ç–µ —Å –ø–∞–∫–µ—Ç–∏...\"
    apt-get clean
    apt-get update # set -e —â–µ —Ö–≤–∞–Ω–µ –≥—Ä–µ—à–∫–∏ —Ç—É–∫

    log_message_inner \"–ò–Ω—Å—Ç–∞–ª–∏—Ä–∞–Ω–µ –Ω–∞ OpenJDK 17 JRE...\"
    apt-get install -y openjdk-17-jre-headless

    log_message_inner \"–ò–Ω—Å—Ç–∞–ª–∏—Ä–∞–Ω–µ –Ω–∞ UniFi Network Controller...\"
    apt-get install -y unifi

    log_message_inner \"–ü–æ—á–∏—Å—Ç–≤–∞–Ω–µ –Ω–∞ –Ω–µ–Ω—É–∂–Ω–∏ —Ñ–∞–π–ª–æ–≤–µ –∏ –∫–µ—à –≤—ä—Ç—Ä–µ –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞...\"
    apt-get clean && apt-get autoremove -y && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
"
# –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ exit status –Ω–∞ pct exec –∫–æ–º–∞–Ω–¥–∞—Ç–∞
if [ $? -ne 0 ]; then
    echo -e "\033[1;31m–ì—Ä–µ—à–∫–∞: –ò–Ω—Å—Ç–∞–ª–∞—Ü–∏—è—Ç–∞ –Ω–∞ UniFi Controller –≤—ä—Ç—Ä–µ –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ $CTID —Å–µ –ø—Ä–æ–≤–∞–ª–∏. –ú–æ–ª—è, –ø—Ä–æ–≤–µ—Ä–µ—Ç–µ –ª–æ–≥–æ–≤–µ—Ç–µ –Ω–∞ Proxmox –∏–ª–∏ –≤–ª–µ–∑—Ç–µ –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ –∑–∞ –ø–æ–≤–µ—á–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è.\033[0m"
    exit 1
fi
log_message "UniFi Network Controller –µ –∏–Ω—Å—Ç–∞–ª–∏—Ä–∞–Ω —É—Å–ø–µ—à–Ω–æ –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä $CTID."

# --- –§–∏–Ω–∞–ª–µ–Ω –æ—Ç—á–µ—Ç ---
echo -e "\n\033[1;32m‚úÖ UniFi LXC –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä $CTID –µ —Å—ä–∑–¥–∞–¥–µ–Ω –∏ UniFi Controller –µ –∏–Ω—Å—Ç–∞–ª–∏—Ä–∞–Ω —É—Å–ø–µ—à–Ω–æ!\033[0m"
echo -e "\033[1;35müéâ –ú–æ–ª—è, –∏–∑—á–∞–∫–∞–π—Ç–µ –Ω—è–∫–æ–ª–∫–æ –º–∏–Ω—É—Ç–∏, –¥–æ–∫–∞—Ç–æ UniFi —É—Å–ª—É–≥–∞—Ç–∞ —Å—Ç–∞—Ä—Ç–∏—Ä–∞ –Ω–∞–ø—ä–ª–Ω–æ.\033[0m"
echo -e "\033[1;36müåê UniFi Controller Web Interface: https://$CONTAINER_IP:8443\033[0m"
echo -e "\033[1;35müîë Root –ø–∞—Ä–æ–ª–∞ –∑–∞ SSH –¥–æ—Å—Ç—ä–ø –¥–æ LXC $CTID: \033[1;33m$ROOTPASS\033[0m"
